<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{39} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="org.springframework.jms" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org.springframework.transaction" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="lucasjc" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
